@model Skill
@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2 class="mb-4 fw-bold" style="color:#211C84;">Yetenek Güncelleme Sayfası</h2>

<form method="post" class="p-4 border rounded shadow bg-light" style="max-width: 600px;">
    <input type="hidden" asp-for="SkillId" />
    <div class="mb-3">
        <label asp-for="SkillName" class="form-label">Yetenek Başlığı</label>
        <input type="text" asp-for="SkillName" class="form-control border border-dark" placeholder="Örn: HTML, Java" />
    </div>
    <div class="mb-3">
        <label asp-for="SkillValue" class="form-label">Yetenek Değeri</label>
        <input type="number" asp-for="SkillValue" class="form-control border border-dark" placeholder="0 - 100" min="0" max="100" />
    </div>
    <button type="submit" class="btn btn-primary">Yeteneği Güncelle</button>
</form>


