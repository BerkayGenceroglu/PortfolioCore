@model List<PortfolioCore.Entities.SocialMedia>
@{
    ViewData["Title"] = "SocialMediaList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-dark">Sosyal Medya Bilgileri</h2>
        <a href="/SocialMedia/CreateSocialMedia" class="btn btn-primary">+ Yeni Sosyal Medya Girişi</a>
    </div>

    <table class="table table-bordered table-hover table-striped shadow">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">İsim</th>
                <th scope="col">İkon</th>
                <th scope="col">Bağlantı</th>
                <th scope="col">Sil</th>
                <th scope="col">Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SocialMediaID</td>
                    <td>@item.Name</td>
                    <td>@item.Icon</td>
                    <td>@item.Url</td>
                    <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-sm btn-danger">Sil</a></td>
                    <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-sm btn-success">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>


