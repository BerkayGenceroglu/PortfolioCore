@model List<PortfolioCore.Entities.Experience>
@{
    ViewData["Title"] = "ExperienceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-dark">Deneyim Listesi</h2>
        <a href="/Experience/CreateExperience" class="btn btn-primary">+ Yeni Deneyim Girişi</a>
    </div>

    <table class="table table-bordered table-hover table-striped shadow">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Başlık</th>
                <th scope="col">Alt Başlık</th>
                <th scope="col">Açıklama</th>
                <th scope="col">Tarih</th>
                <th scope="col">Sil</th>
                <th scope="col">Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ExperienceId</td>
                    <td>@item.Title</td>
                    <td>@item.SubTitle</td>
                    <td>@item.Description</td>
                    <td>@item.ExperienceDate</td>
                    <td><a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-sm btn-danger">Sil</a></td>
                    <td><a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-sm btn-success">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

