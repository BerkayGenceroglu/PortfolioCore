@model List<Feature>

<section id="hero" class="py-5 bg-light">
    @foreach (var item in Model)
    {
        <div class="container" data-aos="zoom-out">
            <div class="row align-items-center gy-4">
                <div class="col-md-6">
                    <img src="@item.FeatureImageUrl" alt="Feature Image" class="img-fluid rounded shadow" style="max-height: 100%; object-fit: cover; width: 100%;" />
                </div>
                <div class="col-md-6">
                    <h2 class="fw-bold mb-3">@item.FeatureMyNameandSurname</h2>
                    <p class="lead">
                        Çalışma Alanlarım:
                        <span class="typed text-primary" data-typed-items="@item.Attribute1,@item.Attribute2,@item.Attribute3"></span>
                        <span class="typed-cursor typed-cursor--blink" aria-hidden="true"></span>
                    </p>
                    <div class="mt-4">
                        @await Component.InvokeAsync("_DefaultSocialMediaComponentPartial")
                    </div>
                </div>
            </div>
        </div>
    }
</section>

