@model List<PortfolioCore.Entities.Contact>
@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-dark">İletişim Bilgi Listesi</h2>
        <a href="/Experience/CreateExperience" class="btn btn-primary">+ Yeni İletişim Girişi</a>
    </div>

    <table class="table table-bordered table-hover table-striped shadow">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Adres</th>
                <th scope="col">Numara</th>
                <th scope="col">Email</th>
                <th scope="col">Lokasyon</th>
                <th scope="col">Sil</th>
                <th scope="col">Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ContactId</td>
                    <td>@item.Address</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Email</td>
                    <td>@item.Location</td>
                    <td><a href="/Experience/DeleteExperience/@item.ContactId" class="btn btn-sm btn-danger">Sil</a></td>
                    <td><a href="/Experience/UpdateExperience/@item.ContactId" class="btn btn-sm btn-success">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

