@model List<PortfolioCore.Entities.Testimonial>
@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-dark">Refarans Bilgileri</h2>
        <a href="/Testimonial/CreateTestimonial" class="btn btn-primary">+ Yeni Refarans Girişi</a>
    </div>

    <table class="table table-bordered table-hover table-striped shadow">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Ad Soyad</th>
                <th scope="col">Meslek</th>
                <th scope="col">Açıklama</th>
                <th scope="col">ImageUrl</th>
                <th scope="col">Sil</th>
                <th scope="col">Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TestimonialId</td>
                    <td>@item.NameSurname</td>
                    <td>@item.Title</td>
                    <td>@item.CommentDetail</td>
                    <td>@item.ImageUrl</td>
                    <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-sm btn-danger">Sil</a></td>
                    <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-sm btn-success">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

