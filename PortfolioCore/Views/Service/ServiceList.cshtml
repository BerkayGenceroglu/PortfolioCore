@model List<PortfolioCore.Entities.Service>

@{
    ViewData["Title"] = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-dark">Hizmet Listem</h2>
        <a href="/Service/CreateService" class="btn btn-primary">+ Yeni Hizmet Girişi</a>
    </div>

    <table class="table table-bordered table-hover table-striped shadow">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Hizmet Ürünü</th>
                <th scope="col">Açıklama</th>
                <th scope="col">İkon</th>
                <th scope="col">Sil</th>
                <th scope="col">Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.servicesID</td>
                    <td>@item.serviceTitle</td>
                    <td>@item.serviceDescription</td>
                    <td>@item.serviceIcon</td>
                    <td><a href="/Service/DeleteService/@item.servicesID" class="btn btn-sm btn-danger">Sil</a></td>
                    <td><a href="/Service/UpdateService/@item.servicesID" class="btn btn-sm btn-success">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

