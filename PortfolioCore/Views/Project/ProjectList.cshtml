@model List<PortfolioCore.Entities.Project>
@{
    ViewData["Title"] = "ProjectList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-dark">Proje Bilgileri</h2>
        <a href="/Project/CreateProject" class="btn btn-primary">+ Yeni Proje Girişi</a>
    </div>

    <table class="table table-bordered table-hover table-striped shadow">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Proje Adı</th>
                <th scope="col">Açıklama</th>
                <th scope="col">Görsel</th>
                <th scope="col">Sil</th>
                <th scope="col">Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProjectId</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.ImageUrl</td>
                    <td><a href="/Project/DeleteProject/@item.ProjectId" class="btn btn-sm btn-danger">Sil</a></td>
                    <td><a href="/Project/UpdateProject/@item.ProjectId" class="btn btn-sm btn-success">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>


