@model List<PortfolioCore.Entities.Education>
@{
    ViewData["Title"] = "EducationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-dark">Eğitim Bilgilerim</h2>
        <a href="/Education/AddEducation" class="btn btn-primary">+ Yeni Eğitim Girişi</a>
    </div>

    <table class="table table-bordered table-hover table-striped shadow">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Okul Adı</th>
                <th scope="col">Bölüm</th>
                <th scope="col">Tarih</th>
                <th scope="col">Eğitim Durumu</th>
                <th scope="col">Sil</th>
                <th scope="col">Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.EducationId</td>
                    <td>@item.Title</td>
                    <td>@item.SubTitle</td>
                    <td>@item.DateInfo</td>
                    <td>@item.Description</td>
                    <td><a href="/Education/DeleteEducation/@item.EducationId" class="btn btn-sm btn-danger">Sil</a></td>
                    <td><a href="/Education/UpdateEducation/@item.EducationId" class="btn btn-sm btn-success">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

