@model List<Portfolio>
@{
    ViewData["Title"] = "PortfolioList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-dark">Portfolyö Listesi</h2>
        <a href="/Portfolio/CreatePortfolio" class="btn btn-primary">+ Yeni Portfolyö Girişi</a>
    </div>

    <table class="table table-bordered table-hover table-striped shadow">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Başlık</th>
                <th scope="col">Açıklama</th>
                <th scope="col">Kategori</th>
                <th scope="col">Sil</th>
                <th scope="col">Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PortfolioId</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.Category.CategoryName</td>
                    <td><a href="/Project/DeleteProject/@item.PortfolioId" class="btn btn-sm btn-danger">Sil</a></td>
                    <td><a href="/Project/UpdateProject/@item.PortfolioId" class="btn btn-sm btn-success">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>





